    <style>
        :root {
            --brand-navy: #0A192F;
            --brand-gold: #D4AF37;
            --text-dark: #1F2937;
            --bg-light: #F9FAFB;
        }

        body {
            font-family: 'Pretendard', sans-serif;
            margin: 0;
            padding: 0;
            color: var(--text-dark);
            line-height: 1.7;
        }

        /* 링크 스타일 초기화 */
        a {
            text-decoration: none !important;
            color: inherit;
        }

        /* 통합 네비게이션 스타일 */
        nav {
            padding: 10px 40px;
            border-bottom: 1px solid #eee;
            position: sticky;
            top: 0;
            background: rgba(255, 255, 255, 0.98);
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            height: 200px; /* 통합 브랜드 사이즈 */
            width: auto;
            display: block;
        }

        .nav-links {
            display: flex;
            gap: 40px;
            font-weight: 700;
            font-size: 1.1rem;
        }

        .nav-links a {
            color: var(--brand-navy);
            transition: 0.3s;
            cursor: pointer;
        }

        .nav-links a:hover,
        .nav-links a.active {
            color: var(--brand-gold);
        }

        /* Header 섹션 */
        .page-header {
            background: linear-gradient(rgba(10, 25, 47, 0.9), rgba(10, 25, 47, 0.9)), url('https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 140px 20px;
        }

        .page-header h1 {
            font-size: 3.5rem;
            margin-bottom: 20px;
            font-weight: 800;
            letter-spacing: -1px;
        }

        .page-header p {
            font-size: 1.25rem;
            color: #cbd5e1;
            max-width: 800px;
            margin: 0 auto;
            opacity: 0.9;
        }

        /* 공통 섹션 스타일 */
        .section {
            padding: 100px 24px;
            max-width: 1150px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            color: var(--brand-navy);
            margin-bottom: 70px;
            font-weight: 800;
            position: relative;
        }

        .section-title::after {
            content: '';
            display: block;
            width: 50px;
            height: 4px;
            background: var(--brand-gold);
            margin: 20px auto 0;
        }

        /* Philosophy Grid */
        .mv-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        .mv-card {
            padding: 50px;
            background: var(--bg-light);
            border-radius: 24px;
            border-top: 6px solid var(--brand-navy);
            transition: 0.3s;
        }

        .mv-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.05);
        }

        .mv-card h3 {
            font-size: 1.8rem;
            margin-top: 0;
            color: var(--brand-navy);
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
        }

        .mv-card h3 i {
            color: var(--brand-gold);
        }

        /* Core Values Grid */
        .values-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
            text-align: center;
        }

        .value-item {
            padding: 45px 30px;
            background: white;
            border: 1px solid #f1f5f9;
            border-radius: 20px;
            transition: 0.3s;
        }

        .value-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
            border-color: var(--brand-gold);
        }

        .value-icon {
            font-size: 3rem;
            color: var(--brand-navy);
            margin-bottom: 25px;
        }

        /* Leadership Section */
        .leadership-bg {
            background: var(--bg-light);
            padding: 100px 0;
        }

        .leader-card {
            display: flex;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 15px 45px rgba(0, 0, 0, 0.07);
            margin-bottom: 50px;
            transition: 0.3s;
        }

        .leader-img {
            width: 350px;
            object-fit: cover;
            min-height: 400px;
            background-color: #f1f5f9;
        }

        .leader-info {
            padding: 50px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .leader-title {
            color: var(--brand-gold);
            font-weight: 700;
            font-size: 1.15rem;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Footer 스타일 */
        footer {
            background: #0A192F;
            color: #8892b0;
            padding: 80px 40px;
            text-align: center;
        }

        @media (max-width: 968px) {
            nav { flex-direction: column; gap: 20px; padding: 20px; }
            .nav-links { gap: 20px; font-size: 0.95rem; }
            .mv-grid, .values-grid, .leader-card { grid-template-columns: 1fr; flex-direction: column; }
            .leader-img { width: 100%; height: 350px; }
            .page-header h1 { font-size: 2.5rem; }
        }
    </style>
</head>

