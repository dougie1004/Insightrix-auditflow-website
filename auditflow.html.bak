        .sub-nav {
            position: sticky;
            top: 100px; /* 네비게이션 높이에 맞춰 조정 */
            background: white;
            border-bottom: 1px solid #ddd;
            z-index: 900;
            padding: 15px 0;
            text-align: center;
        }

        .sub-nav a {
            margin: 0 20px;
            font-weight: 600;
            color: #555;
            font-size: 0.95rem;
        }

        .sub-nav a:hover {
            color: var(--brand-navy);
        }

        /* Sections */
        section {
            padding: 100px 24px;
            max-width: 1100px;
            margin: 0 auto;
            scroll-margin-top: 180px;
        }

        .section-title {
            text-align: center;
            margin-bottom: 50px;
            color: var(--brand-navy);
            font-size: 2.2rem;
            font-weight: 800;
