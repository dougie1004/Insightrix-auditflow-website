        .tech-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 80px;
        }

        .tech-card {
            background: var(--bg-light);
            padding: 40px;
            border-radius: 20px;
            border-top: 5px solid var(--brand-navy);
        }

        .tech-card h3 {
            font-size: 1.5rem;
            color: var(--brand-navy);
            margin-top: 0;
        }

        .tech-card i {
            font-size: 2rem;
            color: var(--brand-gold);
            margin-bottom: 20px;
