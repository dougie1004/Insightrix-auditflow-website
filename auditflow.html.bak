        .table-wrapper {
            overflow-x: auto;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            border-radius: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            min-width: 600px;
        }

        th, td {
            padding: 18px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

        th {
            background: #f1f5f9;
            color: #475569;
            font-weight: 700;
